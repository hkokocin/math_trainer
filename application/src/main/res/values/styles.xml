<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/amber</item>

        <item name="android:windowBackground">@color/amber_light</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppTheme.Green">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/green_light</item>
    </style>

    <style name="AppTheme.Cyan">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan_dark</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/cyan_light</item>
    </style>

    <style name="AppTheme.Orange">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/orange_light</item>
    </style>

    <style name="AppTheme.Teal">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/teal_light</item>
    </style>

    <style name="AppTheme.Purple">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/amber</item>
        <item name="android:windowBackground">@color/purple_light</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/design_default_color_on_primary</item>
    </style>

    <style name="Widget.MathTrainer.Button.Option">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.MathTrainer.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.MathTrainer.Button.Dark">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
